{
  "compilerOptions": {
    "target": "es2016",    
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@domains/*": ["src/domains/*"],
      "@engines/*": ["src/engines/*"],
      "@factories/*": ["src/factories/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@repositories/*": ["src/repositories/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "jest.config.ts"
  ]
}
